@using VT.Model.ViewModel;
@model LoginViewModel
@{
    ViewBag.Title = "Trang đăng nhập";
}
<div class="container">
    <div class="row">
        @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <h4 style="text-align: center; font-size: 25px; color: #888888; margin: 20px 0px;">Đăng nhập vào hệ thống.</h4>
            <hr />
            <br />
            <br />
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(m => m.Account)
                <div class="group-by">
                    @Html.TextBoxFor(m => m.Account, new { @class = "form-control", placehoder = "Nhập tài khoản hoặc email" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Password)
                <div class="group-by">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", placehoder= "Nhập mật khẩu" })
                </div>
            </div>
            <div class="form-group">

                <div class="group-by">
                    <label style="cursor:pointer;">
                        @Html.CheckBoxFor(x=>x.Remember)
                        Ghi nhớ tài khoản
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="group-by">
                    <input type="submit" class="btn-submit" value="Đăng nhập" />
                    <a href="@Url.Action("Register","Account")">Đăng ký</a> |
                    <a href="@Url.Action("ForgotPassword","Account")">Quên tài khoản?</a>
                </div>
            </div>
        }
    </div>
</div>
