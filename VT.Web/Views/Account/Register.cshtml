@model VT.Model.ViewModel.RegisterViewModel
@{
    ViewBag.Title = "Trang đăng ký tài khoản";
}
@Html.Hidden("urlpage", Url.Action("GetArea", "Account"), new { id = "get-area-cbo" })
<div class="container">
    <div class="row">
        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <h4 style="text-align: center; font-size: 25px; color: #888888; margin: 20px 0px;">Tạo mới một tài khoản.</h4>
            <hr />
            <br />
            <br />
            @Html.ValidationSummary(true)
            @Html.HiddenFor(x=>x.Lat)
            @Html.HiddenFor(x=>x.Lng)
            <br />
            <div class="form-group">
                @Html.LabelFor(m => m.Username)
                <div class="group-by">
                    @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x=>x.Username)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Email)
                <div class="group-by">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.Email)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Password)
                <div class="group-by">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.Password)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ConfirmPassword)
                <div class="group-by">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.ConfirmPassword)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.FullName)
                <div class="group-by">
                    @Html.TextBoxFor(m => m.FullName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.FullName)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Phone)
                <div class="group-by">
                    @Html.TextBoxFor(m => m.Phone, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.Phone)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.IdProvince)
                <div class="group-by">
                    @Html.DropDownListFor(x => x.IdProvince, Model.DropDownProvince, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.IdProvince)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.IdDistrict)
                <div class="group-by">
                    @Html.DropDownListFor(x => x.IdDistrict, Model.DropDownDistrict, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.IdDistrict)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.IdWard)
                <div class="group-by">
                    @Html.DropDownListFor(x => x.IdWard, Model.DropDownWard, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.IdWard)
                </div>
            </div>
            <div class="form-group" id="last-address" style="display:none;">
                @Html.LabelFor(m => m.FullAddress)
                <div class="group-by">
                    @Html.TextBoxFor(m => m.FullAddress, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.FullAddress)
                </div>
                <div class="group-by" style="margin-bottom: 30px;height: 60px;">
                    <p style="margin-top:20px;"> Chức năng định vị chỉ mang tính tương đối. Phù hợp nhất trên thiết bị di động có chức năng GPS</p>
                    <button type="button" onclick="InitGeolocation();" style="margin:5px 0px; padding:5px; cursor:pointer;">Định vị vị trí trên Trình duyệt hoặc GPS</button>
                </div>
            </div>
            <div class="google-map" id="map">

            </div>
            <div class="form-group">
                <div class="group-by">
                    <input type="submit" class="btn-submit" value="Đăng ký" />
                </div>
            </div>
        }
    </div>
</div>
@section Scripts {
    <script src="~/Scripts/Client/RegisterView.js"></script>
    @*<script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyD87ai8ZCRfdENwDnzxGVVhCRZ-BdP6fOs&callback=initMap&sensor=true" type="text/javascript"></script>*@
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyD87ai8ZCRfdENwDnzxGVVhCRZ-BdP6fOs&sensor=true&libraries=places" async defer></script>
    <script src="~/Scripts/Client/GoogleMap.js"></script>

