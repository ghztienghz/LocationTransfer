@model VT.Web.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Khôi phục lại mật khẩu";
}

<div class="container">
    <div class="row">
        @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <h4 style="text-align: center; font-size: 25px; color: #888888; margin: 20px 0px;">Khôi phục mật khẩu.</h4>
            <hr />
            <br />
            <br />
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(m => m.Email)
                <div class="group-by">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <div class="group-by">
                    <input type="submit" class="btn-submit" value="Khôi phục" />
                    <a href="@Url.Action("Register","Account")">Đăng ký</a> |
                    <a href="@Url.Action("Login","Account")">Đăng nhập</a>
                </div>
            </div>
        }
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
